<!doctype html>
<html lang="{{ language or 'en' }}">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {%- if title -%} {{ meta.site.titleAbbreviated }} | {{ title }} {%- else
      -%} {{ title or meta.site.title }} {%- endif -%}
    </title>
    <meta
      name="description"
      content="{{ description or meta.site.description }}"
    />
  </head>
  <body>
    {{ content | safe }}
  </body>
</html>
